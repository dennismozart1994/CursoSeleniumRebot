import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class TesteGoogle {
	
	@Test
	public void teste() {
		// Seta qual navegador o sistema deve abrir
		// Firefox
		// System.setProperty("webdriver.gecko.driver", "C:\\Users\\INMETRICS\\Downloads\\drivers\\geckodriver.exe");
		// Chrome
		// System.setProperty("webdriver.chrome.driver", "C:\\Users\\INMETRICS\\Downloads\\drivers\\chromedriver.exe");
		// Cria um webdriver do tipo Firefox
		// WebDriver driver = new FirefoxDriver();
		WebDriver driver = new ChromeDriver();
		// Acessa a página
		driver.get("https://www.google.com.br");
		Assert.assertEquals("Google", driver.getTitle());
		driver.close();
	}
